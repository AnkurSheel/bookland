{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "esnext",
        "jsx": "preserve",
        "lib": ["dom", "esnext"],
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "noUnusedLocals": false,
        "pretty": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["./types", "node_modules/@types"]
    },
    "include": ["./src/**/*", "./*.ts"],
    "exclude": ["node_modules", "public", ".cache", "types"]
}
