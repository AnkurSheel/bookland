@model BaseModel

<!DOCTYPE html>
<html lang="en" class="min-h-screen">
<head>
    @await Html.PartialAsync("partials/_Head.cshtml")
</head>
<body class="font-sans font-normal leading-relaxed font-base text-gray-800 min-h-screen bg-gray-100">
<header>
    @await Html.PartialAsync("partials/_Navigation.cshtml")
</header>
<main class="mx-auto max-w-prose p-8 prose prose-xl prose-purple" >
    <h1 class="text-center py-4">@Model.PageTitle</h1>
    <div class="flex flex-col min-h-screen">
        <article>
            @RenderBody()
        </article>
    </div>
</main>

@await Html.PartialAsync("partials/_Scripts.cshtml")
@await RenderSectionAsync("Scripts", false)

</body>
</html>
