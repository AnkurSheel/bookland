@model BaseModel

<!DOCTYPE html>
<html lang="en" class="min-h-screen">
<head>
    <title>@Model.Document.GetString("Title")</title>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link href="/assets/styles.css" rel="stylesheet"/>
</head>
<body class="font-sans font-normal leading-relaxed font-base text-gray-800 min-h-screen prose-lg">
<header>
    @await Html.PartialAsync("partials/_Navigation.cshtml")
    <h1 class="text-center">@Model.Document.GetString("Title")</h1>
</header>
<main class="mx-auto max-w-prose p-8">
    <div class="flex flex-col min-h-screen">
        <article>
            @RenderBody()
        </article>
    </div>
</main>

@await Html.PartialAsync("partials/_Scripts.cshtml")
@await RenderSectionAsync("Scripts", false)

</body>
</html>
