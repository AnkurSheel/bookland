@model BaseModel

<!-- https://www.section.io/engineering-education/creating-a-responsive-navigation-bar-using-tailwind-css-and-javascript/ -->

<nav class="bg-white shadow-lg">
    <div class="max-w-6xl mx-auto px-4">
        <div class="flex justify-between">
            <div class="flex space-x-7 items-center">
                <!-- Website Logo -->
                <div>
                    <a href="./" class="flex items-center py-4 px-2">
                        <span class="font-semibold text-gray-500 text-lg">
                            Discoveries in Bookland
                        </span
                        >
                    </a>
                </div>
                <ul class="hidden md:flex items-center space-x-1">
                    @foreach (var doc in Model.NavigationLinks)
                    {
                        <li class="py-4 px-2 text-gray-500 font-semibold hover:text-green-500 transition duration-300">
                            @Html.DocumentLink(doc)
                        </li>
                    }
                </ul>
            </div>

            @* <ul class="hidden md:flex items-center space-x-3 "> *@
            @*     <a *@
            @*         href="" *@
            @*         class="py-2 px-2 font-medium text-gray-500 rounded hover:bg-green-500 hover:text-white transition duration-300"> *@
            @*         Buy me a Coffee *@
            @*     </a *@
            @*     > *@
            @* </ul> *@
            <div class="md:hidden flex items-center">
                <button class="outline-none mobile-menu-button">
                    <svg class="h-6 w-6 fill-current" viewBox="0 0 24 24">
                        <path fill-rule="evenodd"
                              d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"/>
                    </svg>
                </button>
            </div>

        </div>
        <div class="hidden mobile-menu">
            <ul class="flex flex-col">
                @foreach (var doc in Model.NavigationLinks)
                {
                    // Don't add the home page to the nav bar
                    <li class="text-sm px-2 py-4 hover:bg-green-500 transition duration-300">
                        @Html.DocumentLink(doc, new Dictionary<object, object>
                        {
                            { "class", "block" }
                        })
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
